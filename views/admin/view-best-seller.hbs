<section class="product">
  <div class="container py-5 mt-3 me-5">
    <div class="row">
      {{#each Bestsellers}}
      <div class="col-lg-3 col-md-3  mb-2 product-card">
                <a href="/view-each-product/{{this._id}}" style="text-decoration: none; color: inherit;">
        <div class="card border-0 h-100 d-flex flex-column">
          <div class="card-body">
            <img class="img-fluid" src="/images/{{this._id}}.png" style="height: 14rem; object-fit: cover;">
          </div>
          <!-- Product name with fixed height using Bootstrap -->
          <h6 class=" h6 text-center mb-2" style="min-height: 2rem;">
            {{this.name}}
          </h6>
          <!-- Button and price aligned using Bootstrap -->
          <div class=" justify-content-between ms-5  px-1 mb-3">
             <a href="/admin/editAdd/{{this._id}}" class="btn btn-sm btn-success mx-2">Edit</a>
              <a href="/admin/deleteAdd/{{this._id}}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
          </div>
        </div>
        </a>
      </div>
      {{/each}}
    </div>

   
  </div>
</section>

<style>
    .card:hover{
   box-shadow: -2px -1px 25px -4px rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: -2px -1px 25px -4px rgba(0, 0, 0, 0.2);
     -moz-box-shadow: -2px -1px 25px -4px rgba(0, 0, 0, 0.2);
     transition: 0.5s;
}
</style>
