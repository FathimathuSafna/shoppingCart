    
<body>
    <section class="container ">
        <h2>Your Orders</h2>
        <div class="row">
            {{#each orders}}
            <div class="col-12 order-card">
                <div class="row order-header">
                    <div class="col-md-6">
                        <p>ORDER PLACED: <span class="order-date">{{this.date}}</span></p>
                    </div>
                    <div class="col-md-3">
                        <p>TOTAL: <span class="order-total">RS:{{this.total}}</span></p>
                    </div>
                    <div class="col-md-3">
                        <p>SHIP TO: <span>{{this.deliveryDetails.address}}</span></p>
                    </div>
                </div>
                {{#each this.products}}
                <div class="row">
                    <div class="col-md-2">
                        <img src="/images/{{this._id}}.png" class="product-img" alt="Product Image">
                    </div>
                    <div class="col-md-10 product-details">
                        <p>{{this.name}}</p>
                        <p>Quantity: {{this.quantity}}</p>
                        <p>Price: RS:{{this.price}}</p>
                        <button onClick="{{#if ../user}}addToCart('{{this._id}}'){{else}}alert('Please login'){{/if}}" class="btn btn-primary btn-sm">Add to cart</button>
                        <a href="/view-each-product/{{this._id}}" class="btn btn-secondary btn-sm">View your item</a>
                    </div>
                </div>
                {{/each}}
                <div class="row order-actions">
                    <div class="col-md-12">
                        <button class="btn btn-secondary btn-sm">Archive order</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</body>


<style>
