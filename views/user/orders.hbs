            font-family: "Poppins", sans-serif;
        }
        .order-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 20px;
        }
        .product-img {
            width: 50px;
            height: 50px;
        }
        .product-details {
            margin-left: 15px;
        }
        .order-actions {
            margin-top: 15px;
        }
