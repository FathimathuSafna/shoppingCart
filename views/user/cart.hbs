<div class="container mt-5">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-md-9">
                <!-- Items in Cart Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Items in your cart</h5>
                        <div class="table-responsive ">
                            <table class="table shoping-cart-table ">
                                <!-- Cart items rendering goes here -->
                                <tbody>
                                    {{#if products.length}}
                                        {{#each products}}
                                            <tr>
                                                <td width="90">
                                                    <div class="cart-product-imitation">
                                                        <td><img style="width: 70px;height:70px" src="/images/{{this.product._id}}.png"></td>
                                                    </div>
                                                </td>
                                                <td class="desc">
                                                    <h6>{{this.product.name}}</h6>
                                                   
                                                </td>
                                                <td>
                                                    
                                                   <button class="cart-item-count mr-3 btn btn-sm btn-white border border-secondary px-3" onClick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',-1)"><i class="fas fa-minus"></i></button></td>
                                                   <td> <span id="{{this.product._id}}">{{this.quantity}}</span> </td>
                                                   <td> <button class="cart-item-count ml-3 btn btn-sm btn-white border border-secondary px-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user}}',1)"><i class="fas fa-plus"></i></button>
                                                </td>
                                                <td>
                                                    <h5>{{this.product.price}}</h5>
                                                </td>
                                                 <td>
                                                    <button class="btn btn-sm btn-danger" onClick="removeProduct('{{this._id}}','{{this.product._id}}')">
                                                      <i class="fa fa-trash"></i> 
                                                     </button>
                                                </td>

                                            </tr>
                                        {{/each}}
                                    {{else}}
                                        <tr>
                                            <td colspan="4" class="text-center">Your shopping cart is empty</td>
                                        </tr>
                                    {{/if}}
                                </tbody>

                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/place-order" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Checkout</a>
                            <a href="/" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Continue shopping</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <!-- Cart Summary Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Cart Summary</h5>
                        <p>Total RS: {{totalValue}}</p>
                        <hr>
                        <p class="text-muted small">Confirm your order</p>
                        <div class="text-center">
                            <a href="/place-order" class="btn btn-primary btn-sm"><i class="fa fa-shopping-cart"></i> Checkout</a>
                        </div>
                    </div>
                </div>
                <!-- Support/Contact Card -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Support</h5>
                        <p class="text-center"><i class="fa fa-phone"></i> +43 100 783 001</p>
                        <p class="text-center small">Please contact with us if you have any questions. We are available 24h.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

